{
  "name": "@a8k/ssr-utils",
  "version": "2.0.0-beta.8",
  "description": "",
  "main": "lib/common/index.js",
  "module": "lib/esm/index.js",
  "scripts": {
    "dev": "tsc --sourceMap --outDir lib/common -m commonjs --watch",
    "build:esm": "tsc  --outDir lib/esm -m es6",
    "build:common": "tsc  --outDir lib/common -m commonjs",
    "build": "rimraf lib && npm run build:esm & npm run build:common",
    "prepublishOnly": "npm run test && npm run build",
    "lint": "tslint --project tsconfig.json",
    "lint:fix": "tslint --project tsconfig.json --fix",
    "test": "jest --coverage --rootDir ./src --passWithNoTests",
    "test:w": "jest --watchAll --rootDir ./src --passWithNoTests"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,css,scss,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "tslint --fix --project tsconfig.json",
      "git add"
    ],
    "*.{css,scss}": [
      "stylelint --fix",
      "git add"
    ],
    "*.{jsx,js}": [
      "prettier --write",
      "git add"
    ]
  },
  "files": [
    "lib"
  ],
  "keywords": [],
  "license": "ISC",
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "node_modules/@a8k/changelog/cz-config.js"
    }
  },
  "devDependencies": {
    "@types/react-dom": "^16.8.4",
    "@types/serialize-javascript": "^1.5.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "peerDependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "dependencies": {
    "serialize-javascript": "^1.7.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
